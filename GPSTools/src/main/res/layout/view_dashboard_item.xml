<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto">


<ImageView
    android:id="@+id/category_image"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:alpha="0.2"
    android:layout_gravity="bottom|left"
    android:adjustViewBounds="false"/>
<TextView
    android:id="@+id/unit_text"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textColor="#50FFFFFF"
    android:textSize="32sp"
    android:textStyle="bold"
    android:gravity="bottom|right"/>
<com.ijmacd.gpstools.mobile.AutoFitTextView
    android:id="@+id/value_text"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_horizontal_margin_thin"
    android:paddingLeft="@dimen/activity_vertical_margin_thin"
    android:paddingRight="@dimen/activity_vertical_margin_thin"
    android:paddingTop="@dimen/activity_horizontal_margin_thin"
    android:textStyle="bold"
    android:singleLine="true"
    android:alpha="1"
    />
    
</merge>
